<div class="container">
  <h1>Students</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Birth Date</th>
        <th>Gender</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.full_name %></td>
          <td><%= student.email %></td>
          <td><%= student.birth_date %></td>
          <td><%= student.gender %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @students %>
</div>
