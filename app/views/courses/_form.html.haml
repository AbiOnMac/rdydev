- if @course
  = form_for(@course) do |f|
    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :description
      = f.text_field :description
    .field
      = f.label :number_of_semesters
      = f.text_field :number_of_semesters
    .field
      = f.label :start_date
      = f.date_field :start_date
    .field
      = f.label :end_date
      = f.date_field :end_date
    .field
      = f.label :allocation
      = f.text_field :allocation
    .actions
      = f.submit 'Save'
- else
  %p No course found